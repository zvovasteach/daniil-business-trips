{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/__tests__/*",
    "./vitest.setup.ts",
    "src/tests/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": ["**/*.vue"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",
    "lib": ["ES2024"],
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "bundler",
    "noErrorTruncation": true,
    "types": ["vitest/globals", "@testing-library/jest-dom", "@testing-library/jest-dom/vitest"]
  }
}
